    .contact__block#contacts
        .container
            .contact__inner
                .contact__phones
                    .contact__ready-text Мы готовы как к работе онлайн, так и к личной встрече в Днепре и в Киеве
                    ul.contact__phones-list
                        li.contact__item
                            .contact__city Днепр
                            .contact__people
                                .contact__name Влад
                                a.contact__phone.link.icon-call(href="tel:0663492552") +38 066 349 25 52
                        li.contact__item
                            .contact__city Киев
                            .contact__people
                                .contact__name Денис
                                a.contact__phone.link.icon-call(href="tel:0663492552") +38 066 349 25 52

                .contact__area
                    form.contact__form#mainForm(autocomplete="off")
                        .thanks__box
                            .thanks__title Спасибо
                            .thanks__text мы вам перезвоним
                        input(type="hidden" name="main")
                        input(type="hidden" name="page_index")
                        .contact__form-fields
                            .contact__form-textgroup.required
                                input.contact__form-input(required type="text" name="name" placeholder="Имя")
                            .contact__form-textgroup.required
                                input.contact__form-input.inputMask(required type="tel" name="phone" placeholder="+ 38 (__) ___  __  __")
