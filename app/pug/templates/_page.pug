//include ../mixins/bread-crumbs.pug

block vars
    - bodyClass = ""
    - mainClass = ""

doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="theme-color" content="#000")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(name="format-detection" content="telephone=no")
        //link(rel="shortcut icon" href="img/favicon.ico" type="image/x-icon")
        title Bizart
        block styles
            link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&subset=cyrillic")
            link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
            link(rel="stylesheet" href="css/style.css")

    body.body__loader(class=bodyClass)
        .body__content
            .body__wrapper
                block header
                    header.header__main
                .main-content(class=mainClass)
                    block content


            block footer
                footer.footer


                block scripts
                    script(src="js/jquery.min.js" type="text/javascript")
                    script(src="js/bundle.js" type="text/javascript")